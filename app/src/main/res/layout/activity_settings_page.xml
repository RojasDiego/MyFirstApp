<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dfr.myfirstapp.SettingsPage">

    <TextView
        android:id="@+id/config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Configuracion"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="169dp"
        android:layout_height="150dp"
        android:layout_below="@+id/config"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@android:drawable/menuitem_background"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="99dp" />

    <ImageButton
        android:id="@+id/btnFoto"
        android:layout_width="42dp"
        android:layout_height="41dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="352dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_above="@+id/nom"
        android:layout_alignEnd="@+id/campEscr"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="33dp" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/campEscr"
        android:layout_alignBottom="@+id/campEscr"
        android:layout_toStartOf="@+id/config"
        android:text="Nombre"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:id="@+id/campEscr"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Type your name"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="274dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/foto"
        android:layout_alignStart="@+id/foto" />
</RelativeLayout>
